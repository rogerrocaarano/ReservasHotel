@{
    string controllerName = ViewBag.controllerName;
}

<div class="mt-3 pt-3 border-top">
    <a asp-controller="@controllerName" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-square"></i>
        Volver
    </a>
    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-square"></i>
        Guardar
    </button>
    <a asp-controller="@controllerName" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-2">
        <i class="bi bi-person-x"></i>
        Eliminar
    </a>
</div>